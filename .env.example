# Turso Database (with Embedded Replicas)
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your-turso-auth-token
TURSO_SYNC_INTERVAL=60  # Sync interval in seconds (default: 60)
LOCAL_DB_PATH=./src/db/convert-docs.db  # Local SQLite file path
DB_ENCRYPTION_KEY=  # Optional: encryption key for local database

# S3 Storage (Tigris or AWS S3 compatible)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_ENDPOINT_URL_S3=https://fly.storage.tigris.dev
S3_BUCKET=your-bucket-name

# Mistral API
MISTRAL_API_KEY=your-mistral-api-key

# Optional: API Authentication
API_KEY=your-api-key